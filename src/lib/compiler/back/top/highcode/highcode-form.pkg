	    fun uniqkind_to_string (x:  hut::Uniqkind)
		= 
		g (hut::uniqkind_to_kind x)
		where
		    fun g  hut::kind::PLAINTYPE	=>  "K0";
			g  hut::kind::BOXEDTYPE	=>  "KB0";

			g (hut::kind::KINDFUN (ks, k))
