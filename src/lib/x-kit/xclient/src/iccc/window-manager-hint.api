    api Window_Manager_Hint {

	# Hints about the window size 
	#
	Window_Manager_Size_Hint
	  #
	  = HINT_USPOSITION
	  | HINT_PPOSITION
	  | HINT_USSIZE
	  | HINT_PSIZE
	  #
	  | HINT_PMIN_SIZE     g2d::Size
	  | HINT_PMAX_SIZE     g2d::Size
	  | HINT_PRESIZE_INC   g2d::Size
	  | HINT_PBASE_SIZE    g2d::Size
