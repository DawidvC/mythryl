## textpane-to-lineeditor.pkg
#
# Here we define the port which
#
#     src/lib/x-kit/widget/edit/lineeditor.pkg
#
# exports to
#
#     src/lib/x-kit/widget/edit/textpane.pkg

# Compiled by:
#     src/lib/x-kit/widget/xkit-widget.sublib



stipulate
    include package   threadkit;								# threadkit			is from   src/lib/src/lib/thread-kit/src/core-thread-kit/threadkit.pkg
    #
    package g2d =  geometry2d;									# geometry2d			is from   src/lib/std/2d/geometry2d.pkg
#   package ebt =  editboss_types;								# editboss_types		is from   src/lib/x-kit/widget/edit/editboss-types.pkg
    package nl  =  red_black_numbered_list;							# red_black_numbered_list	is from   src/lib/src/red-black-numbered-list.pkg
    package iuw =  issue_unique_widget_id;							# issue_unique_widget_id	is from   src/lib/x-kit/widget/gui/issue-unique-widget-id.pkg
herein

    # This port is implemented in:
    #
    #     src/lib/x-kit/widget/edit/lineeditor.pkg
    #
    package textpane_to_lineeditor {
	#
	Linestate
	  =
	  { cursor:	Null_Or(Int),								# Column at which to show cursor, with first column being 0.  NULL means show no cursor.
	    selected:	Null_Or((Int,Int)),							# Columns to show as being selected (something like reverse video). Value of  THE (start,stop) means columns start through stop INCLUSIVE should be marked.  NULL means no chars are selected.  Example: THE(0,0)  means only first char in line is selected.
	    text:	String									# Text to display, starting in first visible column (column 0).
	  };

	Textpane_To_Lineeditor
	  =
	  { lineeditor_id:	iuw::Id,
	    textpane_id:	iuw::Id,							# We belong to this Textpane instance.
	    textedit_id:	iuw::Id,							# We belong to this Textedit instance.
	    paneline:		Int,								# Which line on the Textpane do we display?  (First is 1.)
	    #
	    get_active:			Void -> Bool,
	    get_state:			Void -> Linestate,

	    set_active_to:		Bool -> Void,
 	    set_state_to:		Linestate -> Void						# 
	  };
    };
end;




