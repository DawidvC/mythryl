	#
	fun process_options
	      (
		options: List(p2t::Textbuffer_Option),
		#
		{ name,
		  id,
		  statewatchers,
		  filename,
		  text
		}
	      )
	    =
	    {   my_name			=  REF name;
		my_id			=  REF id;
		my_statewatchers	=      statewatchers;											# Already has a REF on it.
		my_filename		=  REF filename;	
		my_text			=  REF text;
	#
		apply  do_option  options
		where
		    fun do_option (p2t::MICROTHREAD_NAME	n)  =>  my_name		 :=  n;
			do_option (p2t::ID			i)  =>  my_id		 :=  i;
			do_option (p2t::STATEWATCHER       (id, w)) =>	my_statewatchers :=  im::set (*my_statewatchers, id_to_int id, (id, w));
			do_option (p2t::INITIAL_FILENAME	n)  =>	my_filename      :=  n;
			do_option (p2t::ASCII			n)  =>	my_text		 :=  n;
		    end;
		end;

		{ name		 =>  *my_name,
		  id 		 =>  *my_id,
		  statewatchers  =>   my_statewatchers,												# Leave the REF on it.
		  filename       =>  *my_filename,
		  text	         =>  *my_text
		};
	    };


        ##########################################################################################
	# PUBLIC.
	#
	fun make_textbuffer_egg
	      (textbuffer_arg:		p2t::Textbuffer_Arg)											# PUBLIC. PHASE 1: Construct our state and initialize from 'options'.
	    =
	    {	textbuffer_arg ->  (buffername, textbuffer_options);
		#
		(process_options
		  ( textbuffer_options,
		    { name		=>  buffername,
		      id		=>  id_zero,
		      statewatchers	=>  REF im::empty,
		      filename		=>  "",
		      text		=>  ""
		    }
		) )
		    ->
		    { name,
		      id,
		      statewatchers,
		      filename,
		      text
		    };
	
		my (id, textbuffer_options)
		    =
		    if (id_to_int(id) == 0)
			id = issue_unique_id();													# Allocate unique imp id.
			(id, p2t::ID id ! textbuffer_options);											# Make our id stable across stop/restart cycles.
		    else
			(id, textbuffer_options);
		    fi;

		me =	{ state       =>  REF textstate,
			  history     =>  REF que::empty_queue,
			  history_len =>  REF   0,
			  history_max =>  REF 100,
			  filename    =>  REF filename,
# XXX BUGGO FIXME We need to ensure here that buffername is unique.  (Or is that an upstream responsibility? Anyhow, someone needs to be doing that.)
			  buffername  =>  REF buffername,
			  dirty	      =>  REF FALSE	
			}
			where
			    textstate =   { textlines =>  nl::from_list (string::lines text),
					    mark      =>  NULL,
					    editcount =>  0
					  };
			end;

		\\ () = {   reply_oneshot = make_oneshot_maildrop():  Oneshot_Maildrop( (Me_Slot, Exports) );					# PUBLIC. PHASE 2: Start our microthread and return our Exports to caller.
			    #
			    xlogger::make_thread  name  (startup  (id, reply_oneshot));								# Note that startup() is curried.

			    (get_from_oneshot  reply_oneshot) -> (me_slot, exports);

			    fun phase3														# PUBLIC. PHASE 3: Accept our Imports, then wait for Run_Gun to fire.
				(
				  imports:	Imports,
				  run_gun':	Run_Gun,	
				  end_gun':	End_Gun
				)
				=
				{
				    put_in_mailslot  (me_slot, { me, textbuffer_arg, imports, statewatchers, run_gun', end_gun' });
				};

			    (exports, phase3);
			};
	    };
    };

